FROM node:20-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

# Build-time args (kommen aus GitHub Actions via --build-arg)
ARG VITE_USE_FIREBASE_EMULATOR=false
ARG VITE_FIREBASE_PROJECT_ID=local-project
ARG VITE_FIREBASE_API_KEY=demo-api-key
ARG VITE_FIREBASE_AUTH_DOMAIN=local-project.firebaseapp.com
ARG VITE_FIREBASE_AUTH_EMULATOR_URL=http://localhost:9099
ARG VITE_FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost
ARG VITE_FIREBASE_FUNCTIONS_EMULATOR_PORT=5001
ARG VITE_API_BASE_URL=http://localhost:8080

# Make args available as env vars during `npm run build`
ENV VITE_USE_FIREBASE_EMULATOR=$VITE_USE_FIREBASE_EMULATOR \
    VITE_FIREBASE_PROJECT_ID=$VITE_FIREBASE_PROJECT_ID \
    VITE_FIREBASE_API_KEY=$VITE_FIREBASE_API_KEY \
    VITE_FIREBASE_AUTH_DOMAIN=$VITE_FIREBASE_AUTH_DOMAIN \
    VITE_FIREBASE_AUTH_EMULATOR_URL=$VITE_FIREBASE_AUTH_EMULATOR_URL \
    VITE_FIREBASE_FUNCTIONS_EMULATOR_HOST=$VITE_FIREBASE_FUNCTIONS_EMULATOR_HOST \
    VITE_FIREBASE_FUNCTIONS_EMULATOR_PORT=$VITE_FIREBASE_FUNCTIONS_EMULATOR_PORT \
    VITE_API_BASE_URL=$VITE_API_BASE_URL

RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]